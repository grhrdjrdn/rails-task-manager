<h1>Single Task</h1>
  <p><%= @task.title %></p>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <%= link_to "Update", edit_task_path(@task) %>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>

<%= link_to "Show All", tasks_path %>
