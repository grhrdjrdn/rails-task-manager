<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <!--- <%= check_box_tag 'completed', '1', task.completed, disabled: true %> --->

      <%= link_to task.title, task_path(task) %>

      <% if task.completed %>
        <p>Completed</p>
      <% else %>
        <p>Not completed</p>
      <% end %>


      <p><%= task.details %></p>
      <p><%= link_to "Update", edit_task_path(task) %></p>
      <p><%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></p>
    </li>
  <% end %>
</ul>

<%= link_to "Create a new task", new_task_path %>
